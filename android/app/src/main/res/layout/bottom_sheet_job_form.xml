<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.constraintlayout.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/jobFormTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/job_form_title"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/jobFormJobNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/job_form_job_number"
        app:layout_constraintTop_toBottomOf="@id/jobFormTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/jobFormDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/job_form_description"
        app:layout_constraintTop_toBottomOf="@id/jobFormJobNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/jobFormNotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/job_form_notes"
        app:layout_constraintTop_toBottomOf="@id/jobFormDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/jobFormSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/job_form_save"
        app:layout_constraintTop_toBottomOf="@id/jobFormNotes"
        app:layout_constraintStart_toStartOf="parent" />

</com.google.android.material.constraintlayout.MotionLayout>
