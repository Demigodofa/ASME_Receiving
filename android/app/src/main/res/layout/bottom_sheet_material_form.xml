<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.constraintlayout.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/materialFormTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/material_form_title"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/materialFormName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/material_form_name"
        app:layout_constraintTop_toBottomOf="@id/materialFormTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/materialFormQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/material_form_quantity"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/materialFormName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/materialFormStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/material_form_status"
        app:layout_constraintTop_toBottomOf="@id/materialFormQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/materialFormSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/material_form_save"
        app:layout_constraintTop_toBottomOf="@id/materialFormStatus"
        app:layout_constraintStart_toStartOf="parent" />

</com.google.android.material.constraintlayout.MotionLayout>
